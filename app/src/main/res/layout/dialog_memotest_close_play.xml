<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:paddingBottom="12dp"
        android:paddingTop="12dp">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/memotest_dialog_close_play_label"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="18dp"
            android:textColor="@color/grey"
            android:text="Are you sure you want to exit?"
            android:textAlignment="center"

    />
    <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Stay"
            android:id="@+id/memotest_dialog_close_play_no"
            android:background="@drawable/xml_round_corners_blue"
            android:textColor="@color/colorWhite"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:padding="8dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/memotest_dialog_close_play_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/memotest_dialog_close_play_yes"
    />

    <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Bye"
            android:id="@+id/memotest_dialog_close_play_yes"
            android:textAllCaps="false"
            android:background="@drawable/xml_round_corners_grey"
            android:textColor="@color/grey"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:padding="8dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/memotest_dialog_close_play_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/memotest_dialog_close_play_no"
    />
</androidx.constraintlayout.widget.ConstraintLayout>
