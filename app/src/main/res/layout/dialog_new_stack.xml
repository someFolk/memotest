<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="8dp"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingBottom="25dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    >

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_new_stack_input"
        android:fontFamily="@font/googlesansregular"
        android:textSize="16sp"
        android:inputType="textCapSentences"
        android:hint="Stack Title"
        android:padding="18dp"
        android:gravity="center"
        app:backgroundTint="@color/lightGrey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/dialog_new_stack_cancel"
        android:textAllCaps="false"
        android:background="@drawable/xml_round_corners_grey"
        android:textColor="@color/googleChromeTextGrey"
        android:minHeight="0dp" android:minWidth="0dp"
        android:padding="8dp"
        android:fontFamily="@font/googlesansregular"
        app:layout_constraintTop_toBottomOf="@id/dialog_new_stack_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/dialog_new_stack_submit"
        android:layout_marginTop="10dp"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:fontFamily="@font/googlesansregular"
        android:id="@+id/dialog_new_stack_submit"
        android:textAllCaps="false"
        android:background="@drawable/xml_round_corners_blue"
        android:textColor="@color/colorWhite"
        android:minHeight="0dp" android:minWidth="0dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_new_stack_input"
        app:layout_constraintStart_toEndOf="@id/dialog_new_stack_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>