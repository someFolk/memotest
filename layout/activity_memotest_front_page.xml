<?xml version="1.0" encoding="UTF-8"?>
<ScrollView android:layout_width="match_parent" android:layout_height="match_parent"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:layoutDirection="ltr"
            android:fontFamily="@font/googlesansregular"
            android:background="@color/primaryGreyBackgroundForWhite">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/memotest_front_page_general_container"
      android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:paddingTop="12dp"
            android:paddingBottom="8dp">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/memotest_front_page_new_stack_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
        >
            <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/folder"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/memotest_frontpage_search_container"
                android:background="@drawable/xml_calander_complete_border"
                android:padding="6dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/memotest_front_page_new_stack_button"
                android:layout_marginEnd="20dp"
        >
            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/memotest_frontpage_search_action_image"
                    android:src="@drawable/search"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
            />

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/memotest_frontpage_search"
                    app:layout_constraintStart_toEndOf="@id/memotest_frontpage_search_action_image"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:hint="Search"
                    android:background="@color/fui_transparent"
                    android:layout_marginStart="12dp"
            />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
      <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/memotest_front_page_nothingtoshow"
              android:text="Nothing to show here. Try creating a new Stack."
              android:textAlignment="center"
              android:textSize="15sp"
              android:textColor="@color/grey"
              android:visibility="gone"
      />

  </LinearLayout>

</ScrollView>