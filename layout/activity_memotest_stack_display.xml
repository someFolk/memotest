<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/memotest_stack_display_general_container"
        android:layout_marginBottom="8dp"
        >

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:id="@+id/memotest_stack_display_title"
            android:text="Andoid Grpahics using bitmaps"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/blueColorRock1"
            android:textSize="22sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:id="@+id/memotest_stack_display_request_description"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:background="@drawable/xml_dashed_complete_border"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/Grey"
                android:textSize="15sp"
                android:text="Add description"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/stackoverflowAloneBorderGrey"
                android:textSize="15sp"
                android:text="X"
                android:padding="4dp"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/memotest_stack_display_description"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/Grey"
            android:textSize="15sp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:visibility="gone"
            android:layout_marginBottom="10dp"
            />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primaryGreyBackgroundForWhite"
            android:layout_marginTop="8dp"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/stackoverflowAloneBorderGrey"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/memotest_stack_display_shuffle_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/memotest_stack_display_play_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginTop="4dp"
                >
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/memotest_shuffle"
                    android:id="@+id/memotest_stack_display_shuffle_image"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/memotest_stack_display_shuffle_image"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="Shuffle"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/memotest_stack_display_play_button"
                app:layout_constraintEnd_toStartOf="@id/memotest_stack_display_add_button"
                app:layout_constraintStart_toEndOf="@id/memotest_stack_display_shuffle_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/memotest_play"
                    android:id="@+id/memotest_stack_display_play_image"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/memotest_stack_display_play_image"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="Play"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/memotest_stack_display_add_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/memotest_stack_display_shuffle_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/plus_add"
                    android:id="@+id/memotest_stack_display_add_image"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/memotest_stack_display_add_image"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="New"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/memotest_stack_display_alarm_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/memotest_stack_display_add_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/alarm_clock_colored_512"
                    android:id="@+id/memotest_stack_display_alarm_image"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/memotest_stack_display_alarm_image"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="Alarm"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/stackoverflowAloneBorderGrey"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/memotest_stack_display_newmemo_container"
            android:background="@color/primaryGreyBackgroundForWhite"
            android:paddingTop="12dp"
            android:visibility="gone"
            >
            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/memotest_stack_display_newmemo_front"
                android:inputType="textCapSentences|textMultiLine"
                android:minLines="3"
                android:maxLines="10"
                android:background="@drawable/xml_calander_complete_border"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:hint="Memo Front"
                android:textAlignment="center"

                />
            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/memotest_stack_display_newmemo_back"
                android:inputType="textCapSentences|textMultiLine"
                android:minLines="3"
                android:maxLines="10"
                android:background="@drawable/xml_calander_complete_border"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/memotest_stack_display_newmemo_front"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:hint="Memo Back"
                android:textAlignment="center"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/memotest_stack_display_newmomo_customize"
                app:layout_constraintTop_toBottomOf="@id/memotest_stack_display_newmemo_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="9dp"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="1px"
                    android:layout_height="1px"
                    android:id="@+id/memotest_stack_display_newmemo_customize_divider"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/memotest_stack_display_newmemo_textcolor_label"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/memotest_stack_display_newmemo_textcolor_preview"
                    app:layout_constraintEnd_toStartOf="@id/memotest_stack_display_newmemo_customize_divider"
                    android:text="Text Color"
                    android:textSize="16sp"
                    android:textColor="@color/darkGrey"

                    />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:id="@+id/memotest_stack_display_newmemo_textcolor_preview"
                    app:layout_constraintStart_toEndOf="@id/memotest_stack_display_newmemo_customize_divider"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:background="@drawable/xml_calander_complete_border"
                    >
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/memotest_stack_display_newmemo_textcolor_preview_colorable"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_margin="3dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/memotest_stack_display_newmemo_textcolor_select_label"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textColor="@color/lightGrey"
                        android:text="SELECT"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/memotest_stack_display_newmemo_backgroundcolor_label"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/memotest_stack_display_newmemo_customize_divider"
                    app:layout_constraintTop_toBottomOf="@id/memotest_stack_display_newmemo_textcolor_preview"
                    app:layout_constraintBottom_toBottomOf="@id/memotest_stack_display_newmemo_backgroundcolor_preview"
                    android:layout_marginTop="10dp"
                    android:text="Background Color"
                    android:textSize="16sp"
                    android:textColor="@color/darkGrey"

                    />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:id="@+id/memotest_stack_display_newmemo_backgroundcolor_preview"
                    app:layout_constraintStart_toEndOf="@id/memotest_stack_display_newmemo_customize_divider"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/memotest_stack_display_newmemo_textcolor_preview"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:background="@drawable/xml_calander_complete_border"
                    >
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/memotest_stack_display_newmemo_backgroundcolor_preview_colorable"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_margin="3dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/memotest_stack_display_newmemo_backgroundcolor_select_label"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textColor="@color/lightGrey"
                        android:text="SELECT"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Close"
                android:id="@+id/memotest_dialog_newmemo_button_back"
                android:textAllCaps="false"
                android:background="@drawable/xml_round_corners_grey"
                android:backgroundTint="@color/colorWhite"
                android:textColor="@color/Grey"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:padding="8dp"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/memotest_stack_display_newmomo_customize"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/memotest_dialog_newmemo_button_forward"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="12dp"
                />

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:id="@+id/memotest_dialog_newmemo_button_forward"
                android:textAllCaps="false"
                android:background="@drawable/xml_round_corners_blue"
                android:textColor="@color/colorWhite"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:padding="8dp"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/memotest_stack_display_newmomo_customize"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/memotest_dialog_newmemo_button_back"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="12dp"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/stackoverflowAloneBorderGrey"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:id="@+id/memotest_stack_display_divider_two"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/memotest_stack_display_times_played_label"
                android:textColor="@color/Grey"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/memotest_stack_display_divider_two"
                android:textSize="15sp"
                android:text="Times Played:"
                android:layout_marginTop="8dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/memotest_stack_display_times_played_value"
                android:textColor="@color/Grey"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/memotest_stack_display_divider_two"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="15sp"
                android:text="8"
                android:layout_marginTop="8dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/memotest_stack_display_takes_time_label"
                android:textColor="@color/Grey"
                app:layout_constraintTop_toBottomOf="@id/memotest_stack_display_times_played_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/memotest_stack_display_divider_two"
                android:textSize="15sp"
                android:text="Play Duration:"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/memotest_stack_display_takes_time_value"
                android:textColor="@color/Grey"
                app:layout_constraintTop_toBottomOf="@id/memotest_stack_display_times_played_label"
                app:layout_constraintStart_toEndOf="@id/memotest_stack_display_divider_two"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="15sp"
                android:text="4 Mins"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/memotest_stack_display_last_time_label"
                android:textColor="@color/Grey"
                app:layout_constraintTop_toBottomOf="@id/memotest_stack_display_takes_time_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/memotest_stack_display_divider_two"
                android:textSize="15sp"
                android:text="Last Time Played"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/memotest_stack_display_last_time_value"
                android:textColor="@color/Grey"
                app:layout_constraintTop_toBottomOf="@id/memotest_stack_display_takes_time_label"
                app:layout_constraintStart_toEndOf="@id/memotest_stack_display_divider_two"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="15sp"
                android:text="14/05/2019"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="1px"
                android:layout_height="1px"
                android:id="@+id/memotest_stack_display_divider"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:id="@+id/memotest_stack_display_memo_count"
                android:text="113 Memos"
                android:textColor="@color/darkGrey"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/memotest_stack_display_divider"
                android:layout_marginStart="60dp"
                android:layout_marginBottom="3dp"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:layout_marginTop="6dp"
                android:background="@color/stackoverflowAloneBorderGrey"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/memotest_stack_display_memo_container"></LinearLayout>
    </LinearLayout>
</ScrollView>